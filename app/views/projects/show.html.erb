<section class="pt-10 px-0 pb-xl-5">
    <div class="container">
      <div class="row justify-content-between align-items-center gutter-3 gutter-lg-5">
        <div class="col-lg-14">
          <h3>Votre projet <%=@project_title%> </h3>
            <div class="d-flex flex-row-reverse">
              <a href="<%= edit_project_path %>" class="btn btn-outline-primary  ">Editer Votre projet</a>
              <a href="<%= project_path %>" class="btn btn-danger" data-confirm="Etes vous sur ?" data-method="DELETE">Supprimer votre projet</a>
            </div>
          <p> <%=@project_comment%> </p>
        </div>
      </div>
    </div>
  </section>
  

<section class="py-0 py-xl-0">
    <div class="container mt-5 mt-xl-10">
      

      <div class="row g-1" id="grid1" data-isotope="" >
        <div class="col-12 filter-design" >
          <%@housings.each do |housing|%>
          <a href="<%=project_housing_path(housing.project_id, housing.id)%>" class="card bg-white card-hover-border">
            <div class="card-body">
              <div class="row align-items-center g-2 g-md-4 text-center text-md-start">
                <div class="col-md-6">
                  <p class="fs-lg mb-0"><%= housing.property_category%>  //  <%=housing.ad_price%>â‚¬  //  <%=housing.localization%> // <%=housing.offer_profitability%></p>
                  <ul class="list-inline list-inline-separated text-muted">
                    <li class="list-inline-item"><%= housing.comment %></li>
                  </ul>
                </div>
                
                
                <div class="col-lg-6 text-end">
                 <%= link_to 'Supprimer', project_housing_path(housing.project_id, housing.id), method: :delete, data: { confirm: "Voulez-vous vraiment supprimer ce logement ? "} %>
                </div>
              </div>
            </div>
            <% end %>
          </a>
          <%=link_to 'Ajouter un logement', new_project_housing_path(@project), class: 'btn btn-primary rounded-pill m-2'%>
        </div>
        

    </div>
  </section>

    
     
    