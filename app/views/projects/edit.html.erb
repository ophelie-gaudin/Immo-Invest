<section>
  <div class="py-15 d-flex flex-column container level-3 min-vh-100">
    <div class="row align-items-center justify-content-center my-auto">
      <div class="col-md-10 col-lg-8 col-xl-5">
        <div class=" card-shadow">
          <div class="card-header bg-white pb-0">
            <%= link_to project_path(@project), class:'w-100 d-flex justify-content-start' do %>
              <i class="fas fa-arrow-left m-1">
              </i>  Retour
            <%end%>
            <h4 class="fw-light mb-5">Editer un <span class="fw-bold mb-5">projet </span></h4>
            <div class="card-body">
              <%=form_for @project do |f| %>
                <div class="form-group ">
                  <label>Titre du projet :</label><br />
                  <%= f.text_field :title, class: "form-control"%>
                </div>
                <div class="form-group mt-3">
                  <label>Lieu :</label>
                  <%= f.text_field :localization, class: "form-control" %>
                </div>
                <div class="form-group mt-3">
                  <label>Note :</label>
                  <%= f.text_field :comment, class: "form-control" %>
                </div>
                <div class="form-group mt-5 d-grid mb-2ns">
                  <button class="btn btn-lg btn-primary" type='submit'>Modifier le projet</button>
                </div>
              <%end%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

