<div class="container">
  <h2 class="fw-light mb-5">Editer votre <span class="fw-bold mb-5"> Projet :</span></h2>
</div>
<section class="mt-4 pb-15">
  <div class="d-flex flex-column container">
    <div class="row align-items-center justify-content-center my-auto">
      <div class="col-md-10 col-lg-8 col-xl-6">
        <div class="card border-1">
          <div class="m-4">
            <%=form_for @project do |f| %>
              <div class="form-group ">
                <label>Titre du projet :</label><br />
                <%= f.text_field :title, class: "form-control"%>
              </div>
              <div class="form-group mt-3">
                <label>Lieu :</label>
                <%= f.text_field :localization, class: "form-control" %>
              </div>
              <div class="form-group mt-3">
                <label>Note :</label>
                <%= f.text_field :comment, class: "form-control" %>
              </div>
              <div class="form-group mt-5 d-grid mb-2ns">
                <button class="btn btn-lg btn-primary" type='submit'>Modifier le projet</button>
              </div>
            <%end%>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>