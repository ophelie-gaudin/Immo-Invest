<div class="test-container">
  <div style='position: relative; width: 80%'>
    <% flash.each do |name, msg| %>
      <div class='alert alert-<%= name %>' role="alert">
        <%= msg %>
      </div>
    <% end %>
  </div>
</div>

<style scoped> 
  .test-container{
    width: 100%;
    position: absolute;
    z-index: 10;
    left: 0;
    top: 110px;
    height: 100px;
    display: grid;
    place-items: center;
  }

  .alert-pending{
  background-color: #E4DFC2;
  color: #A79159;
  border: 1px solid #A79159;
  border-radius: 6px;
  height: 60px;
  padding: 0;
  display: grid;
  place-items: center;
}

.alert-attention{
